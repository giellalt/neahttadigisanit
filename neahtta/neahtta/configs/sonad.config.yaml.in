ApplicationSettings:
  app_name: "Netidigisõnad"
  short_name: "sonad"
  default_locale: "et"
  default_pair: ["izh", "fin"]
  mobile_default_pair: false
  grouped_nav: true
  new_mobile_nav: true
  strip_spaces: true
  locales_available:
    - "et"
    - "fi"
    - "lv"
    - "ru"
    - "en"
  # TODO: someone will have to decide on the meta keywords and
  # descriptions for google.
  app_meta_title: "Netidigisõnad"
  meta_description: >
     Free, mobile-friendly dictionaries for Livonian, Võro, Veps, Votic and Izhorian.
  meta_keywords: >
     olonets, olonetsian, livonian, liivi, veps, votic, izhorian
  admins_to_email:
    - "rueter.jack@gmail.com"
    - "trond.trosterud@uit.no"

Tools:
  hfst_lookup: &HFST-LOOKUP '/bin/hfst-lookup'

Morphology:
  fin:
    tool: *HFST-LOOKUP
    file: '/opt/smi/fin/bin/analyser-dict-gt-desc.hfstol'
    inverse_file: '/opt/smi/fin/bin/generator-dict-gt-norm.hfstol'
    format: 'hfst'
    options:
      compoundBoundary: "#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  est:
    tool: *HFST-LOOKUP
    file: '/opt/smi/est/bin/analyser-dict-gt-desc.hfstol'
    inverse_file: '/opt/smi/est/bin/generator-dict-gt-norm.hfstol'
    format: 'hfst'
    options:
      compoundBoundary: "#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  liv:
    tool: *HFST-LOOKUP
    file: '/opt/smi/liv/bin/analyser-dict-gt-desc.hfstol'
    inverse_file: '/opt/smi/liv/bin/generator-dict-gt-norm.hfstol'
    format: 'hfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  lav:
    tool: *HFST-LOOKUP
    file: '/opt/smi/lav/bin/analyser-dict-gt-desc.hfstol'
    inverse_file: '/opt/smi/lav/bin/generator-dict-gt-norm.hfstol'
    format: 'hfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  livM:
    tool: *HFST-LOOKUP
    file: '/opt/smi/liv/bin/analyser-dict-gt-desc-mobile.hfstol'
    inverse_file: '/opt/smi/liv/bin/generator-dict-gt-norm.hfstol'
    format: 'hfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  izh:
    tool: *HFST-LOOKUP
    file: '/opt/smi/izh/bin/analyser-dict-gt-desc.hfstol'
    inverse_file: '/opt/smi/izh/bin/generator-dict-gt-norm.hfstol'
    format: 'hfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  vro:
    tool: *HFST-LOOKUP
    file: '/opt/smi/vro/bin/analyser-dict-gt-desc.hfstol'
    inverse_file: '/opt/smi/vro/bin/generator-dict-gt-norm.hfstol'
    format: 'hfst'
    options:
      compoundBoundary: "+Cmp#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  vot:
    tool: *HFST-LOOKUP
    file: '/opt/smi/vot/bin/analyser-dict-gt-desc.hfstol'
    inverse_file: '/opt/smi/vot/bin/generator-dict-gt-norm.hfstol'
    format: 'hfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'
  rus:
    tool: *HFST-LOOKUP
    file: '/opt/smi/rus/bin/analyser-dict-gt-desc.hfstol'
    inverse_file: '/opt/smi/rus/bin/generator-dict-gt-norm.hfstol'
    format: 'hfst'
    options:
      compoundBoundary: "+Use/Circ#"
      derivationMarker: "+Der"
      tagsep: '+'
      inverse_tagsep: '+'

Languages:
  - iso: liv
    minority_lang: true

  - iso: livM
    minority_lang: true
    variant: True # this makes the fab process skip attempting `svn up` here.

  - iso: izh
    minority_lang: true

  - iso: vro
    minority_lang: true

  - iso: vot
    minority_lang: true

  - iso: fin
  - iso: rus
  - iso: est
  - iso: lav
    minority_lang: true


# This also dictates the order of the dictionaries in the UI for now.
Dictionaries:
  # liv
  - source: liv
    target: fin
    dict_source: multi
    path: 'dicts/liv-all.xml'
    input_variants: &liv_variants
      - type: "standard"
        description: !gettext "Standard"
        example: "(äǟ)"
        # NB: must be same as analyser name
        short_name: "liv"
      - type: "mobile"
        description: !gettext "mobile friendly"
        example: "(a &rarr; ä ~ ǟ)"
        short_name: "livM"

  - source: fin
    target: liv
    path: 'dicts/fin-liv.xml'

  - source: liv
    target: est
    dict_source: multi
    path: 'dicts/liv-all.xml'
    input_variants: *liv_variants

  - source: liv
    target: lav
    dict_source: multi
    path: 'dicts/liv-all.xml'
    input_variants: *liv_variants

  - source: lav
    target: liv
    path: 'dicts/lav-liv.xml'

  # izh
  - source: izh
    target: fin
    dict_source: multi
    path: 'dicts/izh-all.xml'

  - source: fin
    target: izh
    path: 'dicts/fin-izh.xml'

  # vro
  - source: vro
    target: est
    dict_source: multi
    path: 'dicts/vro-all.xml'
    show_korp_search: True
    korp_search_host: &F_KORP "http://gtweb.uit.no/f_korp"
    corpora: 'VRO_WIKIPEDIA_20210319'
    start_query: 'http://gtweb.uit.no/ws/gt_korp?command=query&corpus='

  - source: vro
    target: fin
    dict_source: multi
    path: 'dicts/vro-all.xml'
    show_korp_search: True
    korp_search_host: *F_KORP
    corpora: 'VRO_WIKIPEDIA_20210319'
    start_query: 'http://gtweb.uit.no/ws/gt_korp?command=query&corpus='

  # vot
  - source: vot
    target: est
    dict_source: multi
    path: 'dicts/vot-all.xml'

  - source: vot
    target: fin
    dict_source: multi
    path: 'dicts/vot-all.xml'

  - source: vot
    target: rus
    path: 'dicts/vot-rus.xml'

  - source: rus
    target: vot
    path: 'dicts/rus-vot.xml'


  # lav
  - source: lav
    target: fin
    path: 'dicts/lav-fin.xml'

  - source: fin
    target: lav
    path: 'dicts/fin-lav.xml'


ReaderConfig:
  Settings:
    # host path without scheme (https, http) to reader lookup API, no trailing
    # slash.
    api_host: "sonad.oahpa.no"
    # URL to serve media from, minus scheme, and no trailing slash.
    media_host: "sonad.oahpa.no"

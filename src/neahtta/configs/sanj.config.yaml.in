  default_locale: "ru"
  default_pair: ["sjd", "ru"]
  mobile_default_pair: false
  locales_available:
    - sjd
    - ru
    #- eng
  app_meta_title: >
     TODO Digibaakoeh gaskeviermesne
  meta_description: >
     TODO Gratis online mobilvennlige sørsamiske ordbøker
  meta_keywords: >
     TODO samisk ordbok, på nett, mobil ordbok, ordbok app, sátnegirji,
     sátnegirjjit sørsamisk, norsk, south sámi, norwegian, sámegiella,
